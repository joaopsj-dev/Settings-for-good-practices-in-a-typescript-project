{
    "env": {
      "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": [
        "./tsconfig.json"
      ]
    },
    "overrides": {
      "files": ["*.ts"]
    },
    "rules": {
      "@typescript-eslint/semi": "off",
      "@typescript-eslint/strict-boolean-expressions": "off",
      "@typescript-eslint/prefer-nullish-coalescing": "off",
      "semi": [2, "always"]
    }
  }
  